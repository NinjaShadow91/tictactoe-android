<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:theme="@style/ThemeOverlay.HelloWorld.FullscreenContainer"
    tools:context=".gameplayActivityFull">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".gameplayActivity">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:background="@drawable/grid"
            app:columnCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="3">

            <ImageView
                android:id="@+id/circle11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle23"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle31"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle32"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle33"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="380dp"
            android:layout_height="380dp"
            app:columnCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="3">

            <ImageView
                android:id="@+id/cross11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:alpha="0"
                android:onClick="cellPressed"
                android:tag="11"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/cross12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:alpha="0"
                android:onClick="cellPressed"
                android:tag="12"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/cross13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:alpha="0"
                android:onClick="cellPressed"
                android:tag="13"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/cross21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                android:onClick="cellPressed"
                android:tag="21"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/cross22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                android:onClick="cellPressed"
                android:tag="22"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/cross23"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                android:onClick="cellPressed"
                android:tag="23"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/cross31"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                android:onClick="cellPressed"
                android:tag="31"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/cross32"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                android:onClick="cellPressed"
                android:tag="32"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/cross33"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                android:onClick="cellPressed"
                android:tag="33"
                app:srcCompat="@drawable/cross" />
        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/turnTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Turn:"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.227" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginBottom="100dp"
            android:alpha="0"
            android:onClick="playAgain"
            android:text="Play Again"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="@style/Widget.Theme.HelloWorld.ButtonBar.Fullscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/menu_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_button" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>